@model System.Collections.Generic.List<sana.webshop.web.Domain.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Products</h2>

<a asp-controller="Product"
   asp-action="Create"
   class="btn btn-primary">Create New Product</a>

<hr />
<br />
@if (Model.Count > 0)
{
    <table class="table table-bordered table-responsive">
        <thead>
           <tr>
               <th>Number</th>
               <th>Title</th>
               <th>Price</th>
           </tr>
        </thead>
        @foreach (var product in Model)
        {
            <tr>

                <td>@product.Number</td>
                <td>@product.Title</td>
                <td>@product.Price</td>

            </tr>
        }
    </table>
}
else
{

    <span class="label-warning">No Results</span>
}